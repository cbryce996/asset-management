@model project_cbryce996.Models.Asset;

@using(Html.BeginForm("AddAsset", "Manage", FormMethod.Post))
{
<div class="content">
    <div class="container">
        <div class="row">            
            <div class="col-12 mt-3">
                <div class="card">
                    <div class="list-group list-group-flush">
                        <div class="card-header">
                            <h5 class="mb-0"> Add Asset </h5>
                        </div>
                        <div class="list-group-item">
                            <div class="row g-2">
                                <div class="col-md-6 mb-1">
                                    @Html.LabelFor(m => m.SystemName, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.SystemName, new { @class = "form-control", @placeholder = "Enter the systems name", @value = "Enter the systems name" })
                                    @Html.ValidationMessageFor(m => m.SystemName, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.Model, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Model, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.Manufacturer, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Manufacturer, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Manufacturer, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.Type, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Type, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Type, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-md-6">
                                    @Html.LabelFor(m => m.Ip, new { @class = "form-label" })
                                    @Html.TextBoxFor(m => m.Ip, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(m => m.Ip, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="list-group-item">
                            <div class="float-end">
                                <button class="btn btn-md btn-primary" type="submit" value="Submit"><i class="fas fa-sm fa-plus"></i><span class="ms-2">Add Asset</span></button>
                                <a class="btn btn-md btn-secondary"  asp-area="" asp-controller="Manage" asp-action="Index"><i class="fas fa-sm fa-ban"></i><span class="ms-2">Cancel</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
}